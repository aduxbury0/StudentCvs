<div class="container" style="padding-top: 50px;">

    <div class="row">

        <div class="col s0 m2 xl3"></div>

        <div class="col s12 m8 xl6">
            
            <div class="card-panel white">
                
                <div class="row center-align">
                    <h5 class="bold grey-text text-darken-3">Sign Up</h5>
                </div>
                
                <form>
                    <div class="row">
                        <input placeholder="Email" id="register-email" type="text">
                        <label for="first_name">Email</label>
                    </div>

                    <div class="row">
                        <input placeholder="Forename" id="register-forename" type="text">
                        <label for="first_name">Forename</label>
                    </div>

                    <div class="row">
                        <input placeholder="Surname" id="register-surname" type="text">
                        <label for="first_name">Surname</label>
                    </div>

                    <div class="row">
                        <input placeholder="Institution Name" id="register-institution" type="text">
                        <label for="first_name">Name of Education Institution</label>
                    </div>
                    
                    <div class="row">
                        <input placeholder="Password" id="login-password" type="text">
                        <label for="first_name">Password</label>
                    </div>

                    <div class="row">
                        <input placeholder="Confirm Password" id="login-password-confirm" type="text">
                        <label for="first_name">Confirm Password</label>
                    </div>

                    <div class="row center-align">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                
                </form>

            </div>

        </div>

        <div class="col s0 m2 xl3"></div>

    </div>

</div>





