{
  "name": "student-cvs",
  "version": "1.0.0",
  "description": "A sharing platform for student CVs",
  "main": "app.js",
  "scripts": {
    "test": "node_modules/.bin/jest --coverage",
    "lint": "node_modules/.bin/eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/aduxbury0/student-cvs.git"
  },
  "author": "Alexander Duxbury",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/aduxbury0/student-cvs/issues"
  },
  "homepage": "https://gitlab.com/aduxbury0/student-cvs#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "express-handlebars": "^3.0.0",
    "mongoose": "^5.3.7"
  },
  "devDependencies": {
    "eslint": "^5.8.0",
    "jest": "^23.6.0"
  },
  "jest": {
    "testEnviroment": "node",
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": -10
      }
    }
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "rules": {
      "eqeqeq": "error",
      "no-undef": "error",
      "comma-dangle": "warn",
      "indent": [
        "error",
        "tab"
      ],
      "prefer-template": "warn",
      "no-empty": "error",
      "no-redeclare": "error",
      "no-unused-vars": "error",
      "no-const-assign": "error",
      "no-var": "error",
      "prefer-const": "warn",
      "global-require": "error"
    }
  }
}
